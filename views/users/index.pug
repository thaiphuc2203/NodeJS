extends ../layout/common.pug
block content
    h1 Users
        a(href='/users/create',class="mb-3 btn btn-info ml-2 ") Create New 
    .d-flex
        form.ml-auto(action="/users/search", method="GET", class="d-flex")
            input(type="text" name="q",class="form-control")
            button(class="btn btn-primary ml-2") Search
    table.table
        tr
            th Avatar 
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td
                    img(src="../" +user.avatar, class="imgAvatar", alt="")
                td= user.name
                td= user.phone
                td
                    a(href='/users/' + user.id) View